<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cdu.tuogen.mapper.OrdersMapper">

    <sql id="order_query">
        select *
        from orders join order_goods
            on orders.mer_id = order_goods.mer_id
    </sql>

    <!-- 映射Map -->
    <resultMap id="order_detail" type="cdu.tuogen.pojo.Order">
        <id column="order_id" property="orderId"/>
        <result column="name" property="name"/>
        <result column="mer_id" property="merId"/>
        <result column="user_id" property="userId"/>
        <result column="admin_id" property="adminId"/>
        <result column="create_time" property="createTime"/>
        <result column="order_status" property="orderStatus"/>
        <result column="order_pay_status" property="orderPayStatus"/>
        <result column="order_pay_status" property="orderPayStatus"/>
        <result column="order_delivery_method" property="orderDeliveryMethod"/>
        <collection property="goodList" ofType="cdu.tuogen.pojo.OrderGoods">
            <result column="mer_id" property="merId"/>
            <result column="good_id" property="goodId"/>
        </collection>
        <!-- 嵌套查询 user 详情 -->
        <collection property="user" ofType="cdu.tuogen.pojo.User"
                    select="cdu.tuogen.mapper.UserMapper.queryUserById"
                    column="user_id"/>
        <!-- 嵌套查询 Admin 详情 -->
        <collection property="admin" ofType="cdu.tuogen.pojo.Admin"
                    select="cdu.tuogen.mapper.AdminMapper.queryAdminById"
                    column="admin_id"/>
    </resultMap>

    <!-- 1.query userLists -->
    <select id="queryOrders" resultMap="order_detail">
        <include refid="order_query"/>
    </select>

    <!-- 2. queryOrder -->
    <select id="queryOrder" resultMap="order_detail" >
        <include refid="order_query"/>
        <where>
            <if test="orderId!=null">order_id=#{orderId}</if>
        </where>
    </select>

    <!-- 3. insertOrders -->
    <insert id="insertOrder" parameterType="java.util.List">
        insert into orders values
        <foreach collection="list" separator="," item="orderList">
            (null,#{orderList.name},#{orderList.merId},#{orderList.userId},#{orderList.adminId},#{orderList.createTime})
        </foreach>
    </insert>

    <!-- 4. deleteOrders -->
    <delete id="deleteOrders" parameterType="java.util.List">
        delete from orders where order_id in
        <foreach collection="list" close=")" open="(" separator="," item="ids">
            #{ids}
        </foreach>
    </delete>

    <!-- 5.updateOrder -->
    <select id="updateOrders" parameterType="cdu.tuogen.pojo.Order">
        update orders
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null">name=#{name},</if>
            <if test="createTime!=null">create_time=#{createTime}</if>
        </trim>
        where order_id = #{orderId}
    </select>
</mapper>